---
import GA from '../components/GA.astro';
import '../css/reset.css';
import '../css/styles.css';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <link rel="icon" href="favicon/favicon.ico" type="image/png" />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="favicon/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="favicon/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="favicon/favicon-16x16.png"
        />
        <link rel="stylesheet" href="fa/fontawesome.min.css" />
        <link rel="stylesheet" href="fa/brands.min.css" />
        <link rel="manifest" href="favicon/site.webmanifest" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Roboto&family=Silkscreen&display=swap"
            rel="stylesheet"
        />

        <GA />
    </head>
    <body>
        <slot />
        <style is:global>
            :root {
                --bg-color: #ffeb3b;
                --text-primary: #1e1e1e;
            }

            main {
                background: var(--bg-color);
                color: var(--text-primary);
            }

            .icons-social a {
                color: var(--text-primary);
            }

            .icons-social a svg path {
                fill: var(--text-primary);
            }
        </style>
    </body>
</html>
