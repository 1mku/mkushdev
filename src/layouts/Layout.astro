---
import Posthog from '../components/Posthog.astro';
import '../css/reset.css';
import '../css/styles.css';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Mike Kushchov - Personal website." />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="favicon/favicon.ico" />
        <title>Mike Kushchov - {title}</title>
        <link rel="icon" href="favicon/favicon.ico" type="image/png" />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="favicon/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="favicon/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="favicon/favicon-16x16.png"
        />
        <link rel="stylesheet" href="fa/fontawesome.min.css" />
        <link rel="stylesheet" href="fa/brands.min.css" />
        <link rel="manifest" href="favicon/site.webmanifest" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Roboto&family=Silkscreen&display=swap"
            rel="stylesheet"
        />
        <Posthog />
    </head>
    <body>
        <main>
            <slot />
        </main>
        <style is:global>
            :root {
                /* --bg-color: #ffeb3b; */
                --text-primary: #fff;
                --geist-foreground: #fff;
                --background: #000;
                --accents-8: #fafafa;
                --accents-7: #eaeaea;
                --accents-6: #999;
                --accents-5: #888;
                --accents-4: #666;
                --accents-3: #444;
                --accents-2: #333;
                --accents-1: #111;
            }

            body {
                background: linear-gradient(
                    180deg,
                    var(--background) 30%,
                    var(--accents-1) 50%,
                    var(--accents-1) 100%
                );
                /* background: var(--bg-color); */
                color: var(--text-primary);
            }

            main {
                margin: 0 auto;
                display: flex;
                flex-direction: column;
                min-height: 100vh;
                justify-content: center;
                max-width: 800px;
                padding: 0 2rem;
                text-align: center;
            }

            .icons-social a {
                color: var(--text-primary);
            }

            .icons-social a svg path {
                fill: var(--text-primary);
            }
        </style>
    </body>
</html>
